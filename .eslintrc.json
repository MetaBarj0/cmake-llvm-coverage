{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/semi": "warn",
    "array-bracket-newline": [
      "warn",
      "consistent"
    ],
    "array-bracket-spacing": "warn",
    "arrow-spacing": "warn",
    "block-spacing": "warn",
    "camelcase": "warn",
    "comma-dangle": "warn",
    "comma-spacing": "warn",
    "comma-style": "warn",
    "computed-property-spacing": "warn",
    "dot-location": "warn",
    "dot-notation": "warn",
    "eol-last": "warn",
    "eqeqeq": "warn",
    "func-call-spacing": "warn",
    "func-name-matching": "warn",
    "generator-star-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ],
    "getter-return": "warn",
    "indent": [
      "warn",
      2
    ],
    "key-spacing": "warn",
    "keyword-spacing": [
      "warn",
      {
        "before": true
      }
    ],
    "newline-before-return": "warn",
    "no-const-assign": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-throw-literal": "warn",
    "no-trailing-spaces": "warn",
    "prefer-const": "warn",
    "prefer-promise-reject-errors": "warn",
    "quotes": "warn",
    "require-await": "warn"
  }
}