// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: package"
    },
    {
      "name": "Acceptance Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/suites/acceptance/index"
      ],
      "outFiles": [
        "${workspaceFolder}/out/tests/acceptance/**/*.js"
      ],
      "preLaunchTask": "npm: test-compile"
    },
    {
      "name": "Unit Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/suites/unit/index"
      ],
      "outFiles": [
        "${workspaceFolder}/out/tests/unit/**/*.js"
      ],
      "preLaunchTask": "npm: test-compile"
    },
    {
      "name": "No Workspace Integration Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/suites/integration/index.noworkspace"
      ],
      "outFiles": [
        "${workspaceFolder}/out/tests/integration/**/*.js"
      ],
      "preLaunchTask": "npm: test-compile"
    },
    {
      "name": "Workspace Integration Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/suites/integration/index.workspace",
        "${workspaceFolder}/out/workspace"
      ],
      "outFiles": [
        "${workspaceFolder}/out/tests/integration/**/*.js"
      ],
      "preLaunchTask": "npm: test-compile"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/suites/extension/index"
      ],
      "outFiles": [
        "${workspaceFolder}/out/tests/extension/**/*.js"
      ],
      "preLaunchTask": "npm: test-compile"
    }
  ]
}